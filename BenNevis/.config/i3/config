# i3 config file - Brendan Gann

	#~~~~~~~~~~~~~~#
	# Key bindings #
	#~~~~~~~~~~~~~~#


# set keyboad mod key set
set $mod Mod4

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec urxvt 

# kill focused window
bindsym $mod+Shift+q kill

# start rofi (a program launcher)
bindsym $mod+d exec rofi -show drun -font "System San Francisco Display 10"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+g split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# Workspaces

set $workspace1 "1:"
set $workspace2 "2:"
set $workspace3 "3:"
set $workspace4 "4:"
set $workspace5 "5:"
set $workspace6 "6:"
set $workspace7 "7:"
set $workspace8 "8:"
set $workspace9 "9:"
set $workspace10 "10:"

# switch to workspace
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5
bindsym $mod+6 workspace $workspace6
bindsym $mod+7 workspace $workspace7
bindsym $mod+8 workspace $workspace8
bindsym $mod+9 workspace $workspace9
bindsym $mod+0 workspace $workspace10 

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5
bindsym $mod+Shift+6 move container to workspace $workspace6
bindsym $mod+Shift+7 move container to workspace $workspace7
bindsym $mod+Shift+8 move container to workspace $workspace8
bindsym $mod+Shift+9 move container to workspace $workspace9
bindsym $mod+Shift+0 move container to workspace $workspace10

for_window [class="Spotify"] move to workspace $workspace10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# shutdown menu
bindsym $mod+Shift+e exec bash /home/brendan/.config/scripts/shutdownhelp.sh
# exit i3 (logs you out of your X session)
#bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to exit i3?' -b 'Yes' 'i3-msg exit'"

# resize windows
bindsym $mod+y resize shrink width 10 px or 10 ppt
bindsym $mod+u resize grow height 10 px or 10 ppt
bindsym $mod+i resize shrink height 10 px or 10 ppt
bindsym $mod+o resize grow width 10 px or 10 ppt

# Pulse Audio controls
set $sink 0
bindsym XF86AudioRaiseVolume exec pamixer -i 1 # increase sound volume
bindsym XF86AudioLowerVolume exec pamixer -d 1 # decrease sound volume

bindsym shift+XF86AudioRaiseVolume exec pamixer -i 10 # increase sound volume
bindsym shift+XF86AudioLowerVolume exec pamixer -d 10 # decrease sound volume

bindsym $Mod+XF86AudioLowerVolume exec pamixer --set-volume 0 # set sink to 0
bindsym $Mod+XF86AudioRaiseVolume exec pamixer --set-volume 100 # set sink to max
bindsym XF86AudioMute exec pamixer -t # mute sound

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86Search exec rofi -show drun -font "System San Francisco Display 10"

# resize i3-Gaps
gaps inner 10
gaps outer 0
bindsym $mod+shift+y gaps inner current plus 5
bindsym $mod+shift+u gaps outer current plus 5
bindsym $mod+shift+i gaps outer current minus 5
bindsym $mod+shift+o gaps inner current minus 5

bindsym $mod+t gaps inner current set 10; gaps outer current set 0
bindsym $mod+shift+t gaps inner current set 0; gaps outer current set 0

#Open Firefox keybinding
bindsym $mod+shift+f exec google-chrome-unstable
bindsym $mod+shift+s exec spotify
bindsym $mod+shift+control+f exec firefox --private-window

# open cmus music player
exec urxvt -e bash /home/brendan/.config/scripts/cmus+vis.sh
bindsym $mod+shift+m exec urxvt -e bash /home/brendan/.config/scripts/cmus+vis_Show.sh

	#~~~~~~#
	# LOOK #
	#~~~~~~#

# font setting
font pango:System San Francisco Display Thin 15

new_window pixel 2 
new_float pixel 2

# Hybrid colors
set $black              #1d1f21
set $grey               #666666
set $lightgrey          #969896
set $yellow             #f0c674
set $red                #cc6666
set $purple 		#b294bb
set $orange	   	#de935f
set $blue 		#81a2be
set $white 		#c5c9c6

#class                  border	backgr	text        split
client.focused          $black 	$red	$orange     $orange
client.focused_inactive $black	$black	$lightgrey  $grey
client.unfocused        $black	$black	$lightgrey  $grey
client.urgent           $black	$red	$orange     $red
client.background       $back

bar {
	position top
	height 21
 	font pango: Hack Nerd Font 10
        colors{
                background $black
                separator #3b3d3e

		#class             #border	#backgr	#text        split
                focused_workspace  $black	$black	$red
                active_workspace   $black	$black	$red
                inactive_workspace $black	$black	$grey
                urgent_workspace   $black 	$black	$orange
        }
        status_command bash $HOME/.config/conky/conky-i3bar
}

# Titles and boarders
for_window [class=".*"] border pixel 2 
hide_edge_borders both

	############
	# AUTO RUN #
	############

# Wallpaper setting
exec_always ls /home/brendan/.wallpaper | shuf -n 1 | while read file; do feh --bg-fill /home/brendan/.wallpaper/$file; done

#start compton
exec compton

# set keyboard layout for X session
exec setxkbmap -layout gb

# Start redshift
exec redshift -l 52.4568:-1.95108
